<h1>Listing articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Main color</th>
      <th>Background color</th>
      <th>Title image</th>
      <th>User</th>
      <th>Category</th>
      <th>Link</th>
      <th>Comments allowed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.main_color %></td>
        <td><%= article.background_color %></td>
        <td><%= article.title_image %></td>
        <td><%= article.user %></td>
        <td><%= article.category %></td>
        <td><%= article.link %></td>
        <td><%= article.comments_allowed %></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>
